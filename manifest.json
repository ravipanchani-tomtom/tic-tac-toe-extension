{
    "manifest_version": 3,
    "name": "Tic Tac Toe P2P",
    "version": "1.0",
    "description": "Play Tic Tac Toe with friends using PeerJS.",
    "action": {
      "default_popup": "index.html"
    },
    "permissions": ["storage"],
  "content_security_policy": {
    "extension_pages": "script-src 'self' https://unpkg.com; object-src 'self'"
  }
  }